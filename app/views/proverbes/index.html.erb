
<%= content_for :nav do %>
<%= render "partials/navbar" %>
<% end %>
<div id="page-wrapper">
  <div class="container">
          <div class="row">
              <div class="col-lg-12">
          <div class="container">
              <p id="notice"><%= notice %></p>
              <div class="row">
                              <div class="col-lg-10">
                                  <h1 class="page-header">Proverbes</h1>
                              </div>
                              <!-- /.col-lg-12 -->
                          </div>
        <div class="row">
          <div class="col-lg-10 col-md-6">

              <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Tapez le nom de l'auteur..">

              <table id="myTable">
                <thead>
                  <tr class="header">
                    <th>Citation</th>
                    <th>Auteur</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @proverbes.each do |proverbe| %>
                    <tr>
                      <td><%= proverbe.citation %></td>
                      <td><%= proverbe.auteur %></td>
                      <td><%= link_to 'Show', proverbe %></td>
                      <td><%= link_to 'Edit', edit_proverbe_path(proverbe) %></td>
                      <td><%= link_to 'Destroy', proverbe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>

              <br>

              <%= link_to 'New Proverbe', new_proverbe_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
    <%= content_for :tab do %>
    <%= render "partials/tabelung" %>
    <% end %>
